<style>
  organism-cell {
    display: block;
    position: absolute;
    height: 10px;
    width: 10px;
    background: black;
    transition: background-color 0.5s;
  }

  organism-cell.alive {
    background: white;
  }
</style>

{{#each model key="key" as |cell|}}
  <organism-cell class="{{if cell.isAlive 'alive'}}"
                 style="top: {{{cell.y}}}0px; left: {{{cell.x}}}0px;"></organism-cell>
{{/each}}
